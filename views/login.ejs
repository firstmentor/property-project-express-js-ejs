<%- include('./header.ejs') %>

<body style="overflow: hidden">
  <style>
    /* Importing fonts from Google */
    @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap");

    /* Reseting */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: "Poppins", sans-serif;
    }

    body {
      background: #ecf0f3;
      /* background-image: url("https://cdna.artstation.com/p/assets/images/images/015/507/918/large/ahmed-mohamed-finish.jpg?1548621182"); */

      background: url(https://cdna.artstation.com/p/assets/images/images/015/507/918/large/ahmed-mohamed-finish.jpg?1548621182);
      background-size: cover;
      background-position: center;
    }

    .wrapper {
      max-width: 400px;
      min-height: 500px;
      margin: 80px auto;
      padding: 40px 30px 30px 30px;
      background: transparent;
      border-radius: 15px;
    }

    .logo {
      width: 80px;
      margin: auto;
    }

    .logo img {
      width: 100%;
      height: 80px;
      object-fit: cover;
      border-radius: 50%;
      box-shadow: 0px 0px 3px #5f5f5f, 0px 0px 0px 5px #ecf0f3,
        8px 8px 15px #a7aaa7, -8px -8px 15px #fff;
    }

    .wrapper .name {
      font-family: auto;
      font-weight: 600;
      font-size: 1.5rem;
      letter-spacing: 1.3px;
      padding-left: 10px;
      color: #555;
    }

    .wrapper .form-field input {
      width: 100%;
      display: block;
      border: none;
      outline: none;
      background: none;
      font-size: 1.2rem;
      color: #fff;
      padding: 5px 5px 5px 5px;
      /* border: 1px solid red; */
    }
.wrapper .form-field input::placeholder{
  color: white;
  padding-left: 5px;
}
    .wrapper .form-field {
      padding-left: 10px;
      margin-bottom: 20px;
      border-radius: 20px;
      box-shadow: inset 1px 1px 1px #cbced1, inset -1px -1px 1px #fff;
      outline: none;
    }

    .wrapper .form-field .fas {
      color: #555;
    }

    .wrapper .btn {
      box-shadow: none;
      width: 100%;
      height: 40px;
      background-color: #04557a;
      color: #fff;
      border-radius: 25px;
      box-shadow: 1px 1px 1px #b1b1b1, -1px -1px 3px #fff;
      letter-spacing: 1.3px;
    }

    .wrapper .btn:hover {
      background-color: #65b9e3;
    }

    .wrapper a {
      text-decoration: none;
      font-size: 0.8rem;
      color: #03a9f4;
    }

    .wrapper a:hover {
      color: #039be5;
    }

    @media (max-width: 380px) {
      .wrapper {
        margin: 30px 20px;
        padding: 40px 15px 15px 15px;
      }
    }
  </style>
  <!-- new template -->
  <div class="wrapper">
    <!-- error print -->
    <% if(msg1.length>0){ %>
    <div class="alert alert-danger"><%= msg1 %></div>
    <% } %>
    <span></span>
    <% if(msg.length>0){ %>
    <div class="alert alert-danger"><%= msg %></div>
    <% } %>
    <div class="logo">
      <img
        src="https://t4.ftcdn.net/jpg/03/42/35/61/240_F_342356173_OUhX2GQlqoeQsaIAo0cv4BVlkayYnTd2.jpg"
        alt="" />
    </div>
    <div class="text-center mt-4 name text-white">Broker Portal</div>
    <form action="/verifyLogin" method="post" class="p-3 mt-3">
      <div class="form-field d-flex align-items-center">
        <span class="far fa-user text-white"></span>
        <input
          type="email"
          id="form2Example18"
          class="form-control form-control-lg"
          name="email"
          placeholder="Email"
          required />
      </div>
      <div class="form-field d-flex align-items-center">
        <span class="fas fa-key text-white"></span>
        <input
          type="password"
          id="form2Example28"
          class="form-control form-control-lg"
          name="password"
          placeholder="Password"
          required />
      </div>
      <button class="btn btn-info btn-lg btn-block" type="submit">Login</button>
    </form>
    <div class="text-center fs-6">
      <a class="nav-link" href="/forgotPassword">Forgot password?</a> or
      <a href="/registration" class="link-info">Register here</a>
    </div>
  </div>
</body>


