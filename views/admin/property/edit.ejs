<%- include("../header.ejs") %> <%- include("../sidebar.ejs") %>

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">Edit Student Form</h1>
        </div>
        <!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active">Display</li>
          </ol>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->
  <!-- </div> -->
  <div class="card">
    <!-- /.card-header -->
    <div class="card-body">
      <table id="example1" class="table table-bordered table-striped">
        <div class="container">
          <form
            action="/admin/propertyUpdate/<%= d.id %>"
            method="post"
            enctype="multipart/form-data"
          >
            <div class="form-group">
              <label for="">Property Name</label>
              <input
                type="text"
                name="name"
                class="form-control"
                value="<%= d.name %>"
                required
              />
              <label for="">Price</label>
              <input
                type="number"
                name="price"
                class="form-control"
                value="<%= d.price %>"
                required
              />
              <label for="">Discreption</label>
              <input
                type="text"
                name="discreption"
                class="form-control"
                value="<%= d.discreption %>"
                required
              />
               <label for="">Select Category</label>
            <select name="category" id="" class="form-control">
              <option value="">select category</option>
              <option value="1BHK">1BHK</option>
              <option value="2BHK">2BHK</option>
              <option value="3BHK">3BHK</option>
            </select>
              <label for="">Address</label>
              <input
                type="text"
                name="address"
                class="form-control"
                value="<%= d.address %>"
                required
              />
              <label for="">City</label>
              <input
                type="text"
                name="city"
                class="form-control"
                value="<%= d.city %>"
                required
              />
              <label for="">State</label>
              <input
                type="text"
                name="state"
                class="form-control"
                value="<%= d.state %>"
                required
              />
              <label for="">Image</label>
              <input
                type="file"
                name="image"
                class="form-control"
                value="<%= d.image %>"
                required
              />
              <center>
                <button class="btn btn-info mt-3" type="submit" >Update</button>
              </center>
            </div>
          </form>
        </div>
        <br />
        <center>
          <a href="/admin/propertyDisplay" class="btn btn-primary">Back</a>
        </center>
        <br />
      </table>
    </div>
    <!-- /.card-body -->
  </div>
  <!-- /.card -->
</div>
<!-- /.content-wrapper -->

<%- include("../footer.ejs") %>
