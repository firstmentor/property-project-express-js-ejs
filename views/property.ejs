  <div class="container mt-5">
    
    <div class="bg-light rounded p-3">
      <div class="bg-white rounded p-4" style="border: 1px dashed rgba(0, 185, 142, .3)">
        <div class="mg-t-100 mb-5">
          <h1 class="bhh1">Showing Best Property For You</h1>
        </div>
        <div class="row ">
           <% p.forEach((p)=>{ %>
          <div class="col-lg-4 col-md-6 mb-3">
            <div class="imgbox">
              <a href="/details"><img class="img-fluid"
                  src="<%= p.image.url %>"
                  style="width: 500px;height: 250px;" alt=""></a>
              <div class="rounded text-black position-absolute start-0 top-0 m-4 py-1 px-3" style="background-color: #def7fc;">Rent</div>
